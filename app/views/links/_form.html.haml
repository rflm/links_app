.row
  .col-md-6.col-md-offset-3
    = form_for(@link) do |f|

      = render 'shared/error_messages', object: f.object
      
      = f.label "Title"
      = f.text_field :title

      = f.label "Url"
      = f.text_field :url

      = f.label "Description"
      = f.text_area :description, rows: 4

      = f.submit "Add link", class: "btn btn-large btn-primary"
      = link_to 'Back', links_path